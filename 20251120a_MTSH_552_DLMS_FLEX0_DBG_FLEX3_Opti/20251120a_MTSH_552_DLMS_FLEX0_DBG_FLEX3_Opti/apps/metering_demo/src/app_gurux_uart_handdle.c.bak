
#include "app_gurux_uart_handdle.h"
#include "definitions.h"

DLMS_DATA dlms_data;

uint8_t check_timer = 0;
dlms_usart_callback dlms_usart_cb = NULL;

// *****************************************************************************
// *****************************************************************************
void write_dlms_data(uint8_t *data, uint16_t len)
{
	uint8_t     prt_data[1000];
    uint16_t    prt_len;
    uint16_t    i;
    FLEXCOM6_USART_Write(data,len);
    
 	FLEXCOM0_USART_Write("\r\n\r\nW: ", sizeof("\r\n\r\nW: "));
    while(!FLEXCOM0_USART_TransmitComplete());
    
    for(i=0; i< len; i++)
    {
        prt_len = sprintf(prt_data, "%02X ", data[i]);
        FLEXCOM0_USART_Write(prt_data, prt_len);
        while(!FLEXCOM0_USART_TransmitComplete());
    }
    
    FLEXCOM0_USART_Write("\r\n\r\n>", sizeof("\r\n\r\n>"));
    while(!FLEXCOM0_USART_TransmitComplete());
}
// *****************************************************************************
// *****************************************************************************
void dlms_set_read_buffer(void)
{
    FLEXCOM6_USART_Read(dlms_data.rec_data, 1);
}
// *****************************************************************************
// *****************************************************************************
uint8_t we_need_to_Send_data = 0;
void APP_chcek_dlms_packet( uintptr_t context )
{
    if(we_need_to_Send_data == 1)
    {
        if (dlms_usart_cb != NULL) 
        {
            //prt_len = sprintf(prt_data, "%02X ", dlms_data.dlms_rec_data[0]);
            //FLEXCOM0_USART_Write(prt_data, prt_len);
            dlms_usart_cb(dlms_data.dlms_rec_data_len, dlms_data.dlms_rec_data);
            dlms_data.dlms_rec_data_len = 0;
        }
        we_need_to_Send_data = 0;
    }
    
}

void process_dlms_rec_data(void)
{
    uint8_t len,tp;
    len = FLEXCOM6_USART_ReadCountGet();
    if(len > 0)
    {
        //dlms_data.dlms_rec_data_len = dlms_data.rec_data_len;
        //memcpy(dlms_data.dlms_rec_data, dlms_data.rec_data, dlms_data.dlms_rec_data_len);
        for(tp=0;tp<len;tp++)
        {
            dlms_data.dlms_rec_data[dlms_data.dlms_rec_data_len++] = dlms_data.rec_data[tp];
        }
    }
    else
    {
        return;
    }
	check_timer = 1;
}

// *****************************************************************************
// *****************************************************************************
void dlms_usart_task(void)
{
 	uint8_t     prt_data[1000];
    uint16_t    prt_len;	
    if(check_timer == 1)
	{
        
        
		we_need_to_Send_data = 1;
        //dlms_data.dlms_rec_data_len = 0;
        check_timer = 0;
		
	}
}

// *****************************************************************************
// *****************************************************************************
void DLMS_USART_Handler(void)
{
    process_dlms_rec_data();
	dlms_set_read_buffer();
}

// *****************************************************************************
// *****************************************************************************
void register_dlms_usart_cb(dlms_usart_callback ucb)
{
	dlms_usart_cb = ucb;
}

// *****************************************************************************
// *****************************************************************************
void dlms_usart_inint(void)
{
    SYS_TIME_CallbackRegisterMS(APP_chcek_dlms_packet,0,200,SYS_TIME_PERIODIC);
    FLEXCOM6_USART_ReadCallbackRegister(DLMS_USART_Handler,0);
	dlms_data.dlms_rec_data_len = 0;
	check_timer = 0;
}
